@model List<PendingQuizListViewModel>
@{
    ViewBag.Title = "Pending Quizzes";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2 class="my-4">Pending Quizzes</h2>

@if (!Model.Any())
{
    <p>There are no pending quizzes.</p>
}
else
{
    <div class="row mt-4">
        @foreach (var quiz in Model)
        {
            <div class="col-md-3">
                <div class="card mb-3">
                   
                    <div class="card-body">
                        <h5 class="card-title">@quiz.Title</h5>
                        <p class="card-text">Creator: @quiz.CreatedBy</p>
                        <p class="card-text">Created At: @quiz.CreatedAt.ToString("g")</p>
                        <p class="card-text">Updated At: @(quiz.UpdatedAt == null ? "-" : quiz.UpdatedAt.Value.ToString("g"))</p>
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@quiz.Id" class="btn btn-primary"><i class="fa fa-eye"></i> View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}